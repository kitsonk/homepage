{
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "deno run -A --watch=static/,routes/,posts/ --watch-exclude=posts.json dev.ts",
    "build": "deno run -A dev.ts build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update ."
  },
  "lint": { "rules": { "tags": ["fresh", "recommended"] } },
  "fmt": { "lineWidth": 120 },
  "exclude": ["**/_fresh/*"],
  "imports": {
    "fresh": "jsr:@fresh/core@^2.0.0-beta.4",
    "@fresh/build-id": "jsr:@fresh/build-id@^1.0.1",
    "@fresh/plugin-tailwind": "jsr:@fresh/plugin-tailwind@^0.0.1-alpha.9",
    "preact": "npm:preact@^10.27.0",
    "prismjs": "npm:prismjs@1.30.0",
    "tailwindcss": "npm:tailwindcss@^4.1.13",
    "@deno/fresh_charts": "https://deno.land/x/fresh_charts@0.3.1/mod.ts",
    "@deno/fresh_charts/utils": "https://deno.land/x/fresh_charts@0.3.1/utils.ts",
    "@deno/gfm": "jsr:/@deno/gfm@0.11.0",
    "@kitsonk/ga4": "jsr:/@kitsonk/ga4@0.1.0",
    "@preact/signals": "npm:@preact/signals@^2.3.1",
    "@std/assert": "jsr:/@std/assert@~1",
    "@std/front-matter": "jsr:/@std/front-matter@~1",
    "@std/media-types": "jsr:/@std/media-types@~1",
    "@std/path": "jsr:/@std/path@~1"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ]
  },
  "nodeModulesDir": "auto"
}
